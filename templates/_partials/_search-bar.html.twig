<section class="searchBar" id="searchBar">
    <form class="searchBar__container" id="search_bar">
        <div>
            <div class="searchBar__input">
                <svg xmlns="http://www.w3.org/2000/svg" width="18.49" height="18.49" viewBox="0 0 8 8">
