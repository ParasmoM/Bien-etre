{% extends 'dashboard/base.html.twig' %}

{% block title %}Hello ParametreController!{% endblock %}



{% block avatar %}
<section class="parametre__avatar">
    <form action="{{ path('parametre_index', {id: app.user.id}) }}" method="post" enctype="multipart/form-data" class="form-profil">
        <div class="profil-photo">
            <div>
            {% if image.nom is defined %}
                <img src="{{ asset('assets/uploads/' ~ app.user.typeUtilisateur ~ '/' ~ image.nom) }}" alt="">
            {% endif %}
            </div>
            <label class="svg">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M3 22q-.825 0-1.413-.588T1 20V8q0-.825.588-1.413T3 6h3.15L8 4h6v4h3v3h4v9q0 .825-.588 1.413T19 22H3Zm8-3.5q1.875 0 3.188-1.313T15.5 14q0-1.875-1.313-3.188T11 9.5q-1.875 0-3.188 1.313T6.5 14q0 1.875 1.313 3.188T11 18.5Zm0-2q-1.05 0-1.775-.725T8.5 14q0-1.05.725-1.775T11 11.5q1.05 0 1.775.725T13.5 14q0 1.05-.725 1.775T11 16.5ZM19 8V6h-2V4h2V2h2v2h2v2h-2v2h-2Z"/>
                </svg>
                {{ form_widget(imagesForm.nom, {'id': 'upload-input'}) }}
            </label>
        </div>
        {{ form_widget(imagesForm._token) }}
    </form>
</section>
{% endblock avatar %}

