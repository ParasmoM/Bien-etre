{% block section %}
<section class="parametre__section">
    <form action="{{ path('parametre_index', {id: app.user.id}) }}" method="post"  enctype="multipart/form-data" class="parametre__form">
        <h3>Votre nom complet</h3>
        <div class="form-items">
            {{ form_widget(utilisateurForm.nom, {'label': 'Votre nos complet', 'attr': {'placeholder': 'Entrez votre nom'}}) }}
            {{ form_widget(utilisateurForm.prenom, {'attr': {'placeholder': 'Entrez votre nom'}}) }}
        </div>

        {% if app.user and app.user.prestataire %}
        <div class="form-items">
            {{ form_widget(utilisateurForm.siteInternet, {'attr': {'placeholder': 'Entrez le liens de votre site'}}) }}
            {{ form_widget(utilisateurForm.nomTel, {'attr': {'placeholder': 'Numéros de téléphone'}}) }}
            {{ form_widget(utilisateurForm.numTva, {'attr': {'placeholder': 'Numéros de TVA'}}) }}
        </div>
        {% endif %}

        <div class="form-items">
            {{ form_widget(userForm.commune, {'placeholder': 'Choisir une commune'}) }}
            {{ form_widget(userForm.localite, {'placeholder': 'Choisir une localite'}) }}
            {{ form_widget(userForm.codePostal, {'placeholder': 'Choisir une code postal'}) }}
        </div>

        <div class="form-items">
            {{ form_widget(userForm.adressRue, {'attr': {'placeholder': 'Entrez Votre adresse'}}) }}
            {{ form_widget(userForm.adressN, {'attr': {'placeholder': 'Entrez Votre n°'}}) }}
            {{ form_widget(utilisateurForm._token) }}
            <button>Enregistrer</button>
        </div>
    </form>
</section>
{% endblock section %}